{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang build active file",
			"command": "g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-std=c++11",
				"${workspaceFolder}/*.cpp",
				// "${file}",
				"-o",
				"out"
				
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang"
		}
	]
}